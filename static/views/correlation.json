{
    "viewName": "correlation",
    "plotOptions": {
        "series": {
            "animation": false
        }
    },
    "viewDefinition": {
        "chart": {
            "type": "heatmap",
            "marginTop": 40,
            "marginBottom": 40
        },
        "title": {
            "text": "{{market}} Correlation"
        },
        "xAxis": {
            "categories": "{{axis}}"
        },
        "yAxis": {
            "categories": "{{axis}}",
            "title": null
        },
        "colorAxis": {
            "min": -1,
            "max": 1,
            "stops": [
                [0, "#3060cf"],
                [0.5, "#fffbbc"],
                [1, "#c4463a"]
            ]
        },
        "legend": {
            "align": "right",
            "layout": "vertical",
            "margin": 0,
            "verticalAlign": "middle",
            "symbolHeight": 320
        },
        "plotOptions": {
            "series": {
                "turboThreshold": 0
            }
        }
    }
}